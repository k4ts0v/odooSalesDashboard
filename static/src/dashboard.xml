<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <div class="vh-100 overflow-auto bg-muted">
            <div class="row m-3">
                <div class="col-lg-12">
                    <!-- Header Section -->
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h1 class="text-primary fw-bold">Sales Dashboard</h1>
                                    <button type="button" class="btn btn-primary" t-on-click="generateRandomData">Generate Random Data</button>
                                    <div>
                                        <select class="form-select">
                                            <option value="0">Select Period</option>
                                            <option value="7">Last 7 Days</option>
                                            <option value="30">Last 30 Days</option>
                                            <option value="90">Last 90 Days</option>
                                            <option value="365">Last 365 Days</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Statistics Section (Squares in a Single Row) -->
                    <div class="row">
                        <div class="col-lg-12 d-flex justify-content-between">
                            <!-- Average Order Processing Time -->
                            <div class="shadow-sm border m-2 p-4 bg-white text-center square-stat">
                                <div class="fs-1 fw-bold text-success">
                                    <t t-esc="dataset.average_time"/>
                                </div>
                                <h3>Average Order Processing Time</h3>
                            </div>

                            <!-- New Orders -->
                            <div class="shadow-sm border m-2 p-4 bg-white text-center square-stat">
                                <div class="fs-1 fw-bold text-success">
                                    <t t-esc="dataset.nb_new_orders"/>
                                </div>
                                <h3>New Orders</h3>
                                <span>This Month</span>
                            </div>

                            <!-- Cancelled Orders -->
                            <div class="shadow-sm border m-2 p-4 bg-white text-center square-stat">
                                <div class="fs-1 fw-bold text-danger">
                                    <t t-esc="dataset.nb_cancelled_orders"/>
                                </div>
                                <h3>Cancelled Orders</h3>
                                <span>This Month</span>
                            </div>

                            <!-- Total Amount of New Orders -->
                            <div class="shadow-sm border m-2 p-4 bg-white text-center square-stat">
                                <div class="fs-1 fw-bold text-success">
                                    <t t-esc="dataset.total_amount"/>
                                </div>
                                <h3>Total Amount of New Orders</h3>
                                <span>This Month</span>
                            </div>

                            <!-- Additional Statistic (Example) -->
                            <div class="shadow-sm border m-2 p-4 bg-white text-center square-stat">
                                <div class="fs-1 fw-bold text-success">
                                    95%
                                </div>
                                <h3>Customer Satisfaction</h3>
                                <span>This Month</span>
                            </div>
                        </div>
                    </div>

                    <!-- Charts Section -->
                    <div class="row">
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Top Products</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer chartType="'doughnut'" title="'Top Products Report'"/>
                            </div>
                        </div>
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Top Sales People</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer chartType="'pie'" title="'Top Sales People Report'"/>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-5">
                        <div class="col-lg-6 mb-1 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white h-100">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Monthly Sales</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer chartType="'bar'" title="'Monthly Sales Report'"/>
                            </div>
                        </div>
                        <div class="col-lg-6 mb-1 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white h-100">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Sales</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer chartType="'line'" title="'Sales over time'"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>